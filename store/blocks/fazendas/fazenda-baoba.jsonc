    "flex-layout.row#baoba-title":{
        "children":[
            "rich-text#baoba-title"
        ],
        "props":{
            "blockClass":"fazenda-title"
        }
    },
    "rich-text#baoba-title":{
        "props":{
            "text": "Fazenda Baobá",
            "textAlignment": "CENTER",
            "textPosition": "CENTER",
            "textColor": "c-on-base--inverted",
            "font": "t-heading-1"
        }
    },

    "image#baoba-hero":{
        "props": {
            "src": "https://tramacafes.vtexassets.com/arquivos/baoba_hero-min.jpg",
            "maxHeight": "500px",
            "blockClass": "fazenda-hero-img"
          }
    },

    "flex-layout.row#baoba-main-text":{
        "children":[
            "flex-layout.col#main-text-baoba"
        ],
        "props":{
            "paddingTop": 9,
            "paddingBottom": 9,
            "blockClass": "fazenda-main-text"
        }
    },

    "flex-layout.col#main-text-baoba":{
        "children":[
            "rich-text#baoba-main-text"
        ],
        "props":{
            "marginLeft": 10,
            "marginRight": 10,
            "blockClass": "fazenda-main-text-col"
        }
    },

    "rich-text#baoba-main-text":{
        "props":{
            "text": "A Fazenda Baobá foi fundada em 2005 pelo então executivo do mercado financeiro Arnaldo Vieira, cujo amor pelo café foi herdado do pai — um português que nos anos 1940 veio do Porto, ainda adolescente, para trabalhar nas cafeterias do antigo centro de São Paulo.\n\nA fazenda fica situada em São Sebastião da Grama, no interior de São Paulo, com altitudes que chegam a 1400m. Atualmente, possui mais de 330 mil pés de café e uma produção anual estimada em 2400 sacas.",
            "textColor": "c-on-base--inverted",
            "blockClass": "fazenda-main-text-text"
        }
    },


