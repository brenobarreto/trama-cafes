{
    "store.custom#fazenda-baoba":{
        "blocks":[
            "flex-layout.row#baoba-title",
            "image#baoba-hero",
            "flex-layout.row#baoba-main-text",
            "flex-layout.row#baoba-stats",
            "flex-layout.row#body-baoba1",
