        ],
        "props":{
            "blockClass":"fazenda-title"
        }
    },
    "rich-text#bom-cafe-title":{
        "props":{
            "text": "Fazenda Bom Café",
            "textAlignment": "CENTER",
            "textPosition": "CENTER",
            "textColor": "c-on-base--inverted",
            "font": "t-heading-1"
        }
    },

    "image#bom-cafe-hero":{
        "props": {
            "src": "https://tramacafes.vtexassets.com/arquivos/buti-hero.jpg",
