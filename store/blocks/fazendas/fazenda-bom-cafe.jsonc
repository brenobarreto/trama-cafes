    /*---ROW 1---*/ 
    
    "flex-layout.row#body-bom-cafe1":{
        "children":[
            "flex-layout.col#bom-cafe1-image",
            "flex-layout.col#bom-cafe1-text"
        ],
        "props":{
            "paddingTop": 9,
            "paddingBottom": 10,
            "colGap": 9,
            "fullWidth": true,
            "blockClass":"fazenda-body-1"
        }
    },

    "flex-layout.col#bom-cafe1-image":{
        "children":[
            "image#bom-cafe1"
        ]
    },
    "image#bom-cafe1":{
        "props": {
            "src": "https://tramacafes.vtexassets.com/arquivos/buti-secagem.jpg",
            "maxHeight": "650px",
            "maxWidth": "",
            "blockClass": "fazenda-img1"
          }
    },

    "flex-layout.col#bom-cafe1-text":{
        "children":[
            "rich-text#bom-cafe1"
        ],
        "props":{
            "marginRight": 10,
            "verticalAlign": "middle"
        }
    },
    "rich-text#bom-cafe1":{
        "props":{
            "text": "A Fazenda Bom Café produz o café especial Buti, um café certificado pelo programa Certifica Minas Café. Ele é produzido a partir da variedade Catuaí e é preparado pelo sistema de secagem natural. Destaca-se pela presença de notas florais, frutadas e de caramelo, além de uma acidez equilibrada e finalização marcante e prolongada.\n\nA fazenda preza por uma produção sem uso de agrotóxicos e que respeita a comunidade de trabalhadores e o meio-ambiente."
            // "textColor": "c-on-base--inverted"
        }
    },


    /*---ROW PRODS---*/ 

    "flex-layout.row#bom-cafe-prods":{
        "children":[
            "search-result-layout.customQuery#bom-cafe"
        ],
        "props":{
            "blockClass": "fazenda-prods"
        }
    },
    "rich-text#bom-cafe-prods-title":{
        "props":{
            "text": "Cafés da Fazenda Bom Café",
            "textAlignment": "CENTER",
            "textPosition": "CENTER",
            "textColor": "#4B5446",
            "font": "t-heading-3",
            "blockClass": "bom-cafe-prods-title"

        }
    },
    "search-result-layout.customQuery#bom-cafe": {
        "blocks": [
            "search-result-layout.desktop#bom-cafe",
            "search-result-layout.mobile",
            "search-not-found-layout"
        ],
        "props": {
            "querySchema": {
            "skusFilter": "ALL_AVAILABLE",
            "queryField": "Buti%20Caf%C3%A9%20Especial",
            "mapField": "b",
            "simulationBehavior": "default",
            "maxItemsPerPage": 15,
            "orderByField": "OrderByTopSaleDESC",
            "hideUnavailableItems": true
            }        
        }
    },
    "search-result-layout.desktop#bom-cafe": {
        "children": [
            "flex-layout.row#result-bom-cafe"
        ],
        "props": {
            "pagination": "show-more",
            "preventRouteChange": false,
            "mobileLayout": {
            "mode1": "small",
            "mode2": "normal"
            }
        }
    },
    "flex-layout.row#result-bom-cafe": {
        "children": ["flex-layout.col#content-bom-cafe"],
        "props": {
            "preventHorizontalStretch": true,
            "fullWidth": true
        }
    },
    "flex-layout.col#content-bom-cafe": {
        "children": [
            "flex-layout.row#fetchprevious",
            "flex-layout.row#products",
            "flex-layout.row#fetchmore"
        ],
        "props": {
            "width": "grow",
            "preventVerticalStretch": true,
            "horizontalAlign": "center"
        }
    },


    /*---ROW 2---*/ 

    "flex-layout.row#body-bom-cafe2":{
